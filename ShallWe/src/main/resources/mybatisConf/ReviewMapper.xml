<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ReviewMapper">

	<!--강의후기 추가 프로시저 -->
	<insert id="insertReivew" parameterType="ReviewBean" statementType="CALLABLE">
		{ call 	INSERT_REVIEW (
			#{lectureCategoryId} 
			, #{memberId}
			, #{lectureId}
			, #{reviewScore} 
			, #{reviewContent}
		)}
	</insert>
	
	<!-- 강의후기 삭제 프로시저 -->
	<delete id="deleteReivew" parameterType="ReviewBean" statementType="CALLABLE">
		{ call  DELETE_REVIEW (
			#{lectureCategoryId} 
			, #{memberId}
			, #{lectureId}
		)}
	</delete>
	
</mapper>

